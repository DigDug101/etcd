#!/bin/sh

set -e

case "$1" in
  configure)
    if ! getent passwd Debian-etcd > /dev/null ; then

      echo 'Adding system-user for etcd' 1>&2
      adduser --system --group --quiet --home /var/spool/etcd \
        --no-create-home --disabled-login --force-badname Debian-etcd
    fi

    install -d -oDebian-etcd -gDebian-etcd -m755 /var/lib/etcd/
    ;;
esac

